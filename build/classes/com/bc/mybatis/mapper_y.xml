<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 유나  -->
<mapper namespace="Baking_y">
	
	<select id="all" resultType="com.bc.model.vo.MemberVO">
		SELECT * FROM MEMBER
	</select>
	
	<!-- 회원가입  -->
	<insert id="join" parameterType="com.bc.model.vo.MemberVO">
		INSERT INTO MEMBER
			(ID, PWD, NAME, PHONE, ADDR)
			VALUES (#{id}, #{pwd}, #{name}, #{phone}, #{addr})
	</insert>
	
	<!-- 로그인 -->
	<select id="login" parameterType="String" resultType="com.bc.model.vo.MemberVO">
		SELECT * FROM MEMBER
			WHERE ID = #{id}
	</select>
	
	<!-- 회원수정 -->
	<update id="update" parameterType="com.bc.model.vo.MemberVO">
		UPDATE MEMBER
			SET PWD = #{pwd},
				NAME = #{name},
				PHONE = #{phone},
				ADDR = #{addr}
			WHERE ID = #{id}
	</update>
	
	<!-- 회원탈퇴(삭제) -->
	<delete id="delete" parameterType="String">
		DELETE MEMBER WHERE ID = #{id}
	</delete>
	
	<!-- 아이디 중복확인     (  1: 중복     0: 중복x ) -->
	<select id="check_id" parameterType="String" resultType="int">
		SELECT NVL(COUNT(*),0)
		FROM MEMBER WHERE ID =#{id}
	</select>
	

</mapper>